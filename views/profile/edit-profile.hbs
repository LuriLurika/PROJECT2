<div class="row justify-content-center">
    <div class="col-md-6">

        <h1>Edita tu perfil</h1>

        <form action="/profile" method="POST">
            <div class="form-group">
                <label for="field1">Nombre de usuario *</label>
                <input name="username" type="text" class="form-control" id="field1" value = "{{username}}">
            </div>
            <div class="form-group">
                <label for="field3">Nombre *</label>
                <input name="name" type="text" class="form-control" id="field3" value ="{{name}}">
            </div>
            <div class="form-group">
                <label for="field4">Apellidos </label>
                <input name="lastName" type="text" class="form-control" id="field4" value ="{{lastName}}"> 
            </div>
            <div class="form-group">
                <label for="field5">Dirección *</label>
                <input name="address" type="text" class="form-control" id="field5" value ="{{address}}">
            </div>
            <div class="form-group">
                <label for="field6">Email *</label>
                <input name="email" type="text" class="form-control" id="field6" value ={{email}}>
            </div>
            <div class="form-group">
                <label for="field7">Teléfono *</label>
                <input name="phone" type="number" class="form-control" id="field7" value ={{phone}}>
            </div>

            <button type="submit" class="btn btn-dark btn-block btn-lg">Modificar</button>

            {{#if errorMsg}}
            <div id="errorMsg">{{{errorMsg}}}</div>
            {{/if}}
        </form>

        <p>Recuerda rellenar los campos obligatorios (*)</p>
    </div>
</div>
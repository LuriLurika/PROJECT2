<form action="/catalog/search" method="POST">
    <div class="form-group">
        <label for="type-list">Marca:</label>
        <select name="brand" class="form-control">
            <option value="">Seleccionar</option>
            {{#each filterBrand}}
            <option>{{this}}<type/option>
            {{/each}}

        </select>
    </div>

    <div class="form-group">
        <label for="type-list">Modelo:</label>
        <select name="model" class="form-control">
            <option value="">Seleccionar</option>
            {{#each filterModel}}
            <option >{{this}}</option>
            {{/each}}

        </select>
    </div>

    <div class="form-group">
        <label for="type-list">Año:</label>
        <select name="year" class="form-control">
            <option value="">Seleccionar</option>
            {{#each filterYear}}
            <option>{{this}}</option>
            {{/each}}

        </select>
    </div>

    <div class="form-group">
        <label for="type-list">Color:</label>
        <select name="color" class="form-control">
            <option value="">Seleccionar</option>
            {{#each filterColor}}
            <option>{{this}}</option>
            {{/each}}

        </select>
    </div>

    <div class="form-group">
        <label for="type-list">Tipo de combustible:</label>
        <select name="fuel" class="form-control">
            <option value="">Seleccionar</option>
            {{#each filterFuel}}
            <option>{{this}}</option>
            {{/each}}

        </select>
    </div>


    <div class="form-group">
        <label for="type-list">Tipo de vehículo:</label>
        <select name="type" class="form-control">
            <option value="">Seleccionar</option>
            {{#each filterType}}
            <option>{{this}}</option>
            {{/each}}

        </select>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info">Buscar</button>
    </div>
</form>


<div class="col-md-3">
    <article class="card" style="width: 18rem;">
        <img class="card-img-top" src="{{photo}}" alt="{{name}}">
        <div class="card-body">
            <h5 class="card-title">{{brand}} {{model}}</h5>
            <h5 class="card-title">{{price}}</h5>
            <hr>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">{{year}} | {{color}} | {{fuel}} | {{type}}</li>
                <li class="list-group-item">{{description}}</li>
            </ul>
            <span>
                <div class="card-body">
                    <a href="/catalog/{{id}}" class="btn btn-sm btn-info">Ver detalles</a>
                    <a href="#" class="btn btn-sm btn-info"><i class="fa fa-heart" aria-hidden="true"></i></a>
                </div>
            </span>
        </div>

    </article>

</div>

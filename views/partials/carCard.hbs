<div class="col-md-3">
    <article class="card mine-card">
        <img class="card-img-top" src="{{photo}}" alt="{{name}}">
        <div class="card-body">
            <h5 class="card-title mine-h5">{{brand}} {{model}}</h5>
            <hr>
            <h4 class="card-title">{{price}}</h4>
            <hr>
            <ul class="list-group list-group-flush">
                <li class="list-group-item mine-li">{{year}} | {{color}} | {{fuel}} | {{type}}</li>
            </ul>
            <span>
                <div class="mine-card-footer">
                    <a href="/catalog/{{_id}}" class="btn btn-sm btn-info">Ver detalles</a>
                    <input type="hidden" name="hiddenIdFav" id="hiddenIdFav" value="{{_id}}">
                    {{#if isFavorite}}
                    <a href="#" class="btn btn-sm btn-info" id="favorite"><i class="fa fa-heart" style="color:red" aria-hidden="true"></i></a>
                    {{else}}
                    <a href="#" class="btn btn-sm btn-info" id="favorite"><i class="fa fa-heart"  aria-hidden="true"></i></a>
                    {{/if}}
                </div>
            </span>
        </div>

    </article>

</div>

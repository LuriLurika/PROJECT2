<div class="container new">
    <div class="row">
        <div class="col-md-4">
            <h1>Editar anuncio</h1>
        </div>
        <div class="col-md-8">
           
            {{#with theCar}}
            <form action="/catalog/{{id}}" class="form-mine" method="POST" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="name-input">Marca</label>
                    <input name="brand" type="text" class="form-control" id="name-input" value = "{{brand}}">
                </div>
                
                <div class="form-group">
                    <label for="name-input">Modelo</label>
                    <input name="model" type="text" class="form-control" id="name-input" value = "{{model}}">
                </div>

                <div class="form-group">
                    <label for="name-input">Precio</label>
                    <input name="price" type="text" class="form-control" id="name-input" value = "{{price}}">
                </div>

                <div class="form-group">
                    <label for="name-input">Año</label>
                    <input name="year" type="text" class="form-control" id="name-input" value = "{{year}}">
                </div>
                
                <div class="form-group">
                    <label for="name-input">Color</label>
                    <input name="color" type="text" class="form-control" id="name-input" value = "{{color}}">
                </div>
                {{/with}}

                <div class="form-group">
                    <label for="type-list">Tipo de combustible:</label>
                    <select name="fuel" class="form-control">
                        <option>Seleccionar</option>
                        {{#each fuelArray}}
                        <option>{{this}}</option>
                        {{/each}}

                    </select>
                </div>


                <div class="form-group">
                    <label for="type-list">Tipo de vehículo:</label>
                    <select name="type" class="form-control">
                        <option>Seleccionar</option>
                        {{#each typeCarArray}}
                        <option >{{this}}</option>
                        {{/each}}

                    </select>
                </div>
                
                {{#with theCar}}
                <div class="form-group">
                    <label for="imageFile">Sube una foto</label>
                    <input type="file" name='imageFile' class="form-control" id="length-input">
                
                </div>
                
                <div class="form-group">
                    <label for="photo-input">Descripción</label>
                    <textarea name="description" rows="10" cols="20" class="form-control" id="length-input"></textarea>
                </div>

                <div class="form-group">
                    <label for="name-input">Email de contacto</label>
                    <input name="email" type="text" class="form-control" id="name-input" value = "{{email}}">
                </div>

                <div class="form-group">
                    <label for="photo-input">Latitud</label>
                    <input name="lat" class="form-control" id="length-input" value = "{{location.coordinates.[0]}}">
                </div>

                <div class="form-group">
                    <label for="photo-input">Longitud</label>
                    <input name="lng" class="form-control" id="length-input" value = "{{location.coordinates.[1]}}">
                </div>
                {{/with}}

                <button type="submit" class="btn btn-info">Modificar coche</button>
                <a href="/catalog" class="btn btn-info">Volver</a>
            </form>

        </div>
    </div>
</div>
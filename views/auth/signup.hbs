<div class="row justify-content-center">
    <div class="col-md-6">

        <h1>Registro</h1>

        <form action="/signup" method="POST">
            <div class="form-group">
                <label for="field1">Nombre de usuario *</label>
                <input name="username" type="text" class="form-control" id="field1">
            </div>
            <div class="form-group">
                <label for="field2">Contraseña *</label>
                <input name="password" type="password" class="form-control" id="field2">
                <small class="form-text text-muted">Nunca compartas tu contraseña</small>
            </div>
            <div class="form-group">
                <label for="field3">Nombre *</label>
                <input name="name" type="text" class="form-control" id="field3">
            </div>
            <div class="form-group">
                <label for="field4">Apellidos</label>
                <input name="lastName" type="text" class="form-control" id="field4">
            </div>
            <div class="form-group">
                <label for="field5">Dirección *</label>
                <input name="address" type="text" class="form-control" id="field5">
            </div>
            <div class="form-group">
                <label for="field6">Email *</label>
                <input name="email" type="text" class="form-control" id="field6">
            </div>
            <div class="form-group">
                <label for="field7">Teléfono *</label>
                <input name="phone" type="number" class="form-control" id="field7">
            </div>

            <button type="submit" class="btn btn-dark btn-block btn-lg">Registrarme</button>

            {{#if errorMsg}}
            <div id="errorMsg">{{{errorMsg}}}</div>
            {{/if}}
        </form>

        <p>¿Tienes cuenta? <a href="/login">¡Inicia sesión!</a></p>
    </div>
</div>